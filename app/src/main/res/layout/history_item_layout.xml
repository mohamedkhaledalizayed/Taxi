<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="#46CCCCCC"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/mohamed"
            android:layout_alignParentStart="true"
            android:id="@+id/user_photo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steve Bowen"
            android:textColor="#000"
            android:layout_toEndOf="@+id/user_photo"
            android:id="@+id/user_name"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/user_photo"
            android:layout_below="@id/user_name"
            android:layout_marginStart="@dimen/_10sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ApplePay"
                android:textColor="#000"
                android:background="@drawable/verify_code_bg"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textSize="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_1sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textColor="#000"
                android:background="@drawable/verify_code_bg"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textSize="@dimen/_8ssp"
                android:layout_marginStart="@dimen/_1sdp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$25.00"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.2km"
                android:textColor="#ccc"
                android:textSize="@dimen/_10ssp"
                />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF"
        android:padding="@dimen/_10ssp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PICK UP"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:textColor="#ccc"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7958 Swift Village"
            android:textColor="#000"
            android:textSize="@dimen/_12ssp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="#ccc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DROP OFF"
            android:textStyle="bold"
            android:textColor="#ccc"
            android:textSize="@dimen/_10ssp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="105 William, St, Chicago, US"
            android:textColor="#000"
            android:textSize="@dimen/_12ssp"
            />



    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
</layout>