<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/_20sdp"
    android:orientation="vertical"
    tools:context=".view.activities.InviteFreiendActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/mohamed"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite Friends"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earn up to"
            android:textSize="@dimen/_15ssp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" $150 "
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a day"
            android:textSize="@dimen/_15ssp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When your friend sign up with your referral code, you can receive up to $150 a day."
        android:layout_margin="@dimen/_20sdp"
        android:textSize="@dimen/_12ssp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARE YOUR INVITE CODE"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="03387546378"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INVITE"
        android:onClick="inviteFriends"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/verify_code_bg"
        />
</LinearLayout>
</layout>